<div class="btn-group">
    <a class="btn btn-default {{ routeMatch('account_movements', 'active', {'show': 'all'}) }}" href="{{ url('account_movements', {'id': account.financeAccountId, 'show': 'all'}) }}">Alle</a>
    <a class="btn btn-default {{ routeMatch('account_movements', 'active', {'show': 'plus'}) }}" href="{{ url('account_movements', {'id': account.financeAccountId, 'show': 'plus'}) }}">Plus</a>
    <a class="btn btn-default {{ routeMatch('account_movements', 'active', {'show': 'minus'}) }}" href="{{ url('account_movements', {'id': account.financeAccountId, 'show': 'minus'}) }}">Minus</a>
</div>
<table class="table table-bordered table-responsive">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Umsatz</th>
            <th>Summe</th>
        </tr>
    </thead>
    <tbody>
        {% for movement in movements %}
            {% if movement.amount < 0 %}
                {% set class = 'alert alert-danger' %}
            {% elseif movement.amount > 0 %}
                {% set class = 'alert alert-success' %}
            {% endif %}
            <tr class="{{ class }}">
                <td>{{ movement.date|date('d.m.Y') }}</td>
                <td><a href="{{ url('account_movement_edit', {'id': movement.financeMovementId}) }}">{{ movement.description }}</a></td>
                <td>{{ movement.amount }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>